<!DOCTYPE html>
<html>
<head>
  <title>OnlineLending</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- HEADER -->
	<header id="header">
		<nav class="navbar st-navbar navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#st-navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
				    	<span class="icon-bar"></span>
				    	<span class="icon-bar"></span>
				    	<span class="icon-bar"></span>
					</button>
					<a class="logo" href="/"><h2>Online Lending</h2></a>
				</div>

				<div class="collapse navbar-collapse" id="st-navbar-collapse">
					<ul class="nav navbar-nav navbar-right">
				    	<li><a href="#header">Home</a></li>
				    	<li><a href="#services">Services</a></li>
				    	<li><a href="#pricing">Pricing</a></li>
				    	<li><a href="#contact">Contact</a></li>
					</ul>
				</div><!-- /.navbar-collapse -->
			</div><!-- /.container -->
		</nav>
	</header>
	<!-- SLIDER -->
	<section id="slider">
		<div id="home-carousel" class="carousel slide" data-ride="carousel">			
			<div class="carousel-inner">
				<div class="item active" style="background-image: url(<%= asset_path "01.jpg"%>)">
					<div class="carousel-caption container">
						<div class="row">
							<div class="col-sm-7">
								<h1>Premier Peer 2 Peer Lending </h1>
								<h2>Borrow and Lend Money</h2>
								<p>Why borrow from banks when you can borrow money for each other with no intrest!</p>
							</div>
						</div>
					</div>					
				</div>
				<div class="item" style="background-image: url(<%= asset_path "02.jpg"%>)">
					<div class="carousel-caption container">
						<div class="row">
							<div class="col-sm-7">
								<h1>No more hassel with banks!</h1>
								<h2>Get money for what you need today</h2>
								<p>Get money for what you need when you need.</p>
							</div>
						</div>
					</div>					
				</div>
				<div class="item" style="background-image: url(<%= asset_path "03.jpg"%>)">
					<div class="carousel-caption container">
						<div class="row">
							<div class="col-sm-7">
								<h1>0% Intrest rates!</h1>
								<h2>All you for you!</h2>
								<p>Never be turned down for your financial needs ever again!</p>
							</div>
						</div>
					</div>					
				</div>
				<div class="item" style="background-image: url(<%= asset_path "04.jpg"%>)">
					<div class="carousel-caption container">
						<div class="row">
							<div class="col-sm-7">
								<h1>For you and only you</h1>
								<h2>Dreams do come true</h2>
								<p>Get the money you finally need to acheive your dreams</p>
							</div>
						</div>
					</div>					
				</div>
				<a class="home-carousel-left" href="#home-carousel" data-slide="prev"><i class="fa fa-angle-left"></i></a>
				<a class="home-carousel-right" href="#home-carousel" data-slide="next"><i class="fa fa-angle-right"></i></a>
			</div>		
		</div> <!--/#home-carousel--> 
    </section>
	<!-- /SLIDER -->
<%= yield %>
<!-- FOOTER -->
	<footer id="footer">
		<div class="container">
			<div class="row">
				<!-- SOCIAL ICONS -->
				<div class="col-sm-6 col-sm-push-6 footer-social-icons">
					<span>Follow us:</span>
					
				</div>
				<!-- /SOCIAL ICONS -->
				<div class="col-sm-6 col-sm-pull-6 copyright">
					<p>&copy; 2015 <a href="">OnlineLending Premier</a>. All Rights Reserved.</p>
				</div>
			</div>
		</div>
	</footer>
	<!-- /FOOTER -->
</body>
</html>
